<?xml version="1.0" encoding="UTF-8" ?>
<odoo>
    <record id="view_car_wash_send_wizard_form" model="ir.ui.view">
        <field name="name">car.wash.send.wizard.form</field>
        <field name="model">car.wash.send.wizard</field>
        <field name="arch" type="xml">
            <form string="Send Booking Email">
                <field name="booking_id" invisible="1"/>

                <group>
                    <label for="mail_partner_ids" string="To"/>
                    <div>
                        <field name="mail_partner_ids"
                               widget="many2many_tags_email"
                               placeholder="Add contacts to notify..."
                               options="{'no_quick_create': True}"
                               context="{'show_email': True}"/>
                    </div>

                    <field name="mail_subject" placeholder="Subject..."/>
                </group>


                <field name="mail_body" class="oe-bordered-editor" widget="html_mail"/>

                <group>
                    <group>
<!--                        <field name="mail_attachments_widget" widget="mail_attachments"/>-->

                        <!--                        <field name="mail_attachments_widget" widget="mail_attachments" string="Attach a file"-->
                        <!--                               nolabel="1" colspan="2"/>-->
                    </group>
                    <group>
                        <field name="mail_template_id"
                               options="{'no_create': True, 'no_edit': True}"
                               context="{'default_model': 'car.wash.booking'}"/>
                    </group>
                </group>

                <footer>
                    <button string="Send"
                            name="action_send_and_print"
                            type="object"
                            class="print btn-primary o_mail_send"/>
                    <button string="Cancel"
                            special="cancel"
                            class="btn-secondary"/>
                </footer>
            </form>
        </field>
    </record>
</odoo>
