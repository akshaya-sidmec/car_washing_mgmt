<?xml version="1.0" encoding="utf-8" ?>
<odoo>
    <record id="view_car_wash_payment_wizard_form" model="ir.ui.view">
        <field name="name">car.wash.payment.wizard.form</field>
        <field name="model">car.wash.payment.wizard</field>
        <field name="arch" type="xml">
            <form string="Register Payment">
                <sheet>
                    <header>
                        <button name="action_confirm_payment" type="object" string="Confirm Payment"
                                class="btn-primary"/>
                        <button string="Cancel" class="btn-secondary" special="cancel"/>
                    </header>
                    <group>
                        <field name="payment_date"/>

                        <field name="amount"/>
                    </group>
                </sheet>
            </form>
        </field>
    </record>

    <record id="action_car_wash_payment_wizard" model="ir.actions.act_window">
        <field name="name">Register Payment</field>
        <field name="res_model">car.wash.payment.wizard</field>
        <field name="view_mode">form</field>
        <field name="target">new</field>
        <field name="view_id" ref="view_car_wash_payment_wizard_form"/>
    </record>
</odoo>
